@using System.ServiceModel.Security
@using CommitteeAdministration.ViewModels
@using CommitteeManagement.Model
@model CommitteeAdministration.ViewModels.LoginViewModel
@{
    ViewBag.Title = "ورود کاربر";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>@ViewBag.Title</h2>
<html lang="en">
<head>
</head>
<body>
    <!-- ***************** login area start ***************** -->
    <section class="login_area">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-7 col-lg-6 section_padding_100">
                    <!-- login form start -->
                    <div class="login_form">
                        <!-- sign in manual form -->
                        <div class="login_manual_form">
                                @using (Html.BeginForm("Login", "Account",new { returnUrl =ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary("", new {@class = "text-danger"})
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <i class="fa fa-user"></i>

                                        @Html.TextBoxFor(m => m.Email, new {@placeholder = "نام کاربری", @type = "text", @name = "username", @id = "user"})

                                    </div>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                        @Html.PasswordFor(m => m.Password, new { @placeholder = "رمز عبور", @type = "password", @name = "username", @id = "pass" })
                                    </div>
                                    <div class="form-group">
                                            @Html.CheckBoxFor(model => model.RememberMe, new { @type = "checkbox", @name = "remember", @id = "check", @value = "remember" })
                                        مرا بخاطر بسپار<br>
                                    </div>
                                    <button type="submit" class="btn btn-default" >ورود</button>
                                }
                            <!-- forget password -->
                            <div class="forget_pass one">
                                <a href="#"><i class="fa fa-question-circle" aria-hidden="true"></i>فراموشی رمز عبور</a>
                            </div>
                           
                        </div>
                    </div>
                    <!-- login form end -->
                </div>
                <div class="col-xs-12 col-md-5 col-lg-6">
                    <!-- login thumb start -->
                    <div class="login_thumb">
                        <!--  For better view please add image size: 275px * 550px  -->
                        <img src="~/bizpro-v3/img/bg-pattern/quote.jpg" alt="">
                        <!-- login thumb caption -->
                        <div class="login_thumb_caption">
                            <h3>خوش آمدید!</h3>
                        </div>
                    </div>
                    <!-- login thumb end -->
                </div>
            </div>
        </div>
    </section>
    
</body>

</html>


@section scripts{
    <!-- Nivoslider js -->
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="/Scripts/js/jquery.nivoslider.js"></script>
    <script src="/Scripts/js/nivoslider-active.js"></script>
    <!-- Chart js -->
    <script src="/Scripts/js/Chart.bundle.js"></script>
    <script src="/Scripts/js/chart.active.js"></script>

    <!-- Owl-carousel js -->
    <script src="/Scripts/js/owl.carousel.min.js"></script>

    <!-- Ajax Contact js -->
    <script src="/Scripts/js/ajax-contact.js"></script>
    <!-- Sticky js -->
    <script src="/Scripts/js/jquery.sticky.js"></script>

    <!-- Simple-lens js -->
    <script src="/Scripts/js/simple-lens.js"></script>
}


