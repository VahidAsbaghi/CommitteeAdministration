@using CommitteeManagement.Model
@model CommitteeManagement.Model.Criterion
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<style>
    .ui-widget-header, .ui-state-default, .ui-button {
        background: #b9cd6d;
        border: 1px solid #b9cd6d;
        color: #FFFFFF;
        font-weight: bold;
    }
</style>



@using (Html.BeginForm("EditCriterionPartial", "Criteria", FormMethod.Post, new { @id = "CriterionEditForm" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" align="right" dir="rtl">
        <h4>معیار</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">

            <div class="col-md-10">
                @Html.EditorFor(model => model.Subject, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Subject, "", new {@class = "text-danger"})
            </div>
            @*@Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("","عنوان معیار", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group" style="display: none">
            @*@Html.LabelFor(model => model.Coefficient, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Coefficient, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Coefficient, "", new {@class = "text-danger"})
            </div>
            @Html.Label("", "ضریب معیار", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

      
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
