@model CommitteeManagement.Model.Indicator

<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<style>
    .ui-widget-header, .ui-state-default, .ui-button {
        background: #b9cd6d;
        border: 1px solid #b9cd6d;
        color: #FFFFFF;
        font-weight: bold;
    }
</style>


@using (Html.BeginForm("EditIndicatorPartial", "Indicators", FormMethod.Post, new { @id = "IndicatorEditForm" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" dir="rtl" align="right">
        <h4>شاخص</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model=>model.Coefficient)
        @Html.HiddenFor(model=>model.DeadlinePeriod)
        <div class="form-group">

            <div class="col-md-10">
                @Html.EditorFor(model => model.Subject, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Subject, "", new {@class = "text-danger"})
            </div>
           @* @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("", "عنوان شاخص", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
       
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
